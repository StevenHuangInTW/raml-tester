#%RAML 0.8
---
title: simple
baseUri: http://guru.nidi/raml/simple/{version}
version: v1
mediaType: application/default
schemas:
  - string: !include string.json

/data:
  get:
    responses:
      200:
        body:
          application/json:
            schema: |
              {"type":"string"}
/query:
  get:
    queryParameters:
      req:
        required: true
      rep:
        repeat: true
    responses:
      200:
        body:
          application/json:
            schema: |
              {"type":"string"}
/schema:
  get:
    responses:
      200:
        body:
          application/json:
            schema: |
              {"type":"string"}
      201:
        body:
          application/json:
            schema: !include string.json
      202:
        body:
          application/json:
            schema: string
      203:
        body:
          application/json:
            schema: undefined
/mediaType:
  get:
    responses:
      200:
        body:
          schema: string
/type:
  get:
    queryParameters:
      boolean:
        type: 'boolean'
      integer:
        type: 'integer'
      number:
        type: 'number'
      string: 
        type: 'string'
      date:
        type: 'date'
      enum:
        enum: ['a','b']
      format:
        #format1: /\d{2}\/[a-y]/
        #format2: "/\\d{2}\\/[a-y]/"
        #format3: /\d{2}\/[a-y]/m
        #format4: "/\d{2}\/[a-y]/i"
    responses:
      200:
